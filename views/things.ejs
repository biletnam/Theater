<body onload="load()">
<%       things.sort(function(a,b) {return (a.name > b.name) ? 1 : ((b.name > a.name) ? -1 : 0);} );
%>
<select id="selectedthing" onChange="thingselected(this)">
    <%for (index = 0; index < things.length; ++index) {%>
    <option value="<%=index%>">
        <%=things[index].name%>
    </option>
    <%};%>

</select>
<div id="thinginfo">
    divstuff

</div>
